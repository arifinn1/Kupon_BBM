<% layout('layout') -%>
<div class="panel-header panel-header-xs">
</div>

<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="card" id="card-tbbm">
        <div class="card-body">
          <div id="alert-view"></div>
          <table id="tbbm" class="display" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Nama Bahan Bakar</th>
                <th class="text-right has-button"><button type="button" class="btn btn-primary btn-sm" onclick="clearInput('', '', true)"><i class="fa fa-plus"></i></button></th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th>Nama Bahan Bakar</th>
                <th></th>
              </tr>
            </tfoot>
            <tbody>
              <% for (var i=0; i<bbm.length; i++) { %>
                <tr>
                  <td><%= bbm[i].nama %></td>
                  <td>
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-info" onclick="clearInput('<%= bbm[i].kd %>', '<%= bbm[i].nama %>', true)"><i class="fa fa-pencil"></i></button>
                      <button type="button" class="btn btn-sm btn-warning" onclick="hapus('<%= bbm[i].kd %>', '<%= bbm[i].nama %>')"><i class="fa fa-trash"></i></button>
                    </div>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card" id="card-bbm">
        <div class="card-header">
          <h5 class="title">Kelola BBM</h5>
        </div>
        <div class="card-body">
          <div id="alert-input"></div>
          <form id="form-bbm" onsubmit="return simpan()">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label>Nama</label>
                  <input type="hidden" name="kd" id="kd">
                  <input type="text" class="form-control" placeholder="Nama Bahan Bakar" name="nama" id="nama" required>
                </div>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-sm" onclick=""><i class="now-ui-icons ui-1_check"></i> SIMPAN</button>
                <button type="button" class="btn btn-default btn-sm" onclick="clearInput('', '', false)"><i class="now-ui-icons ui-1_simple-remove"></i> BATAL</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    tbbm = $('#tbbm').DataTable({
      columns: [
        { data: 'nama' },
        { data: 'tombol', className: 'text-right has-button', orderable: false }
      ]
    });

    $('#tbbm tbody').on( 'click', 'div.btn-group', function () {
      active_row = $(this).parents('tr');
    });
  });

  $('#card-bbm').hide();
  var tbbm, active_row;

  function clearInput(kd, nama, show) {
    if (show) {
      $('#card-tbbm').slideUp('fast', function() {
        $('#card-bbm').slideDown('fast');
      });
    } else {
      $('#card-bbm').slideUp('fast', function() {
        $('#card-tbbm').slideDown('fast');
      });
    }
    
    $('#kd').val(kd);
    $('#nama').val(nama);
    $('#nama').focus();
  }

  function simpan() {
    $("#card-bbm .card-body").LoadingOverlay("show");
    $.ajax({
      type: 'POST',
      url: '/bbm',
      data: $('#form-bbm').serialize()
    }).done(function(data) {
      if (data.res == 'SUKSES') {
        if (data.op == 'BARU') {
          js_fun.show_alert("#alert-input","<strong>Sukses!</strong> Data baru telah berhasil tersimpan.", "success");
        } else {
          js_fun.show_alert("#alert-input","<strong>Sukses!</strong> Data telah berhasil dirubah.", "success");
        }
      } else if (data.res == 'NAMA') {
        js_fun.show_alert("#alert-input","<strong>Gagal!</strong> Nama bahan bakar telah digunakan.", "warning");
      } else {
        js_fun.show_alert("#alert-input","<strong>Gagal!</strong> Koneksi bermasalah.", "warning");
      }

      if (data.res == 'SUKSES') {
        reloadTampilan(data.op, (data.op == 'BARU' ? data.kd : $('#kd').val()));
      }
    }).fail(function (jqXHR, textStatus) {
      if(confirm('Simpan data gagal, coba lagi?')){ simpan(); }
    }).always(function () {
      $('#card-bbm .card-body').LoadingOverlay('hide', true);
    });
    return false;
  }

  function hapus(kd, nama) {
    if(confirm('Yakin ingin menghapus '+nama+' ?')){
      $('#card-tbbm .card-body').LoadingOverlay('show');
      jQuery.ajax({
        type: 'DELETE',
        url: '/bbm',
        data: { kd: kd }
      }).done(function(data) {
        if (data.res == 'SUKSES') {
          tbbm.row(active_row).remove().draw();
          active_row = null;
          js_fun.show_alert('#alert-view', '<strong>Sukses!</strong> Data berhasil dihapus.', 'success');
        }else{ js_fun.show_alert('#alert-view', '<strong>Gagal!</strong> Data gagal dihapus.', 'warning'); }
      }).fail(function (jqXHR, textStatus) {
        if(confirm('Hapus data gagal, coba lagi?')){ hapus(kd, nama); }
      }).always(function () {
        $('#card-tbbm .card-body').LoadingOverlay('hide', true);
      });
    }
  }

  function reloadTampilan(op, kd) {
    var nama = $('#nama').val();
    var data = {
      nama    : nama,
      tombol  : `<div class="btn-group">
        <button type="button" class="btn btn-sm btn-info" onclick="clearInput('`+kd+`', '`+nama+`', true)"><i class="fa fa-pencil"></i></button>
        <button type="button" class="btn btn-sm btn-warning" onclick="hapus('`+kd+`', '`+nama+`')"><i class="fa fa-trash"></i></button>
      </div>`
    };
    
    if(op=='UBAH'){ tbbm.row(active_row).remove().draw(); }
    tbbm.row.add(data).draw();
    active_row = null;

    setTimeout(function(){
      clearInput('', '', false);
      $('#alert-input').html('');
    }, 1000);
  }
</script>
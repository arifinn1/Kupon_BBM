<% layout('layout-blank') -%>

<body class="hold-transition login-page">
  <div class="login-box">
    <div class="login-logo">
      <a href="#"><b>Kupon</b>BBM</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
      <p class="login-box-msg">Sign in to start your session</p>
      <% if(errorMessage.length > 0){ %>
        <div class="alert alert-danger alert-dismissable btn-round">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
          <%= errorMessage %>
        </div>
      <% } %>
  
      <form action="/signin" method="post">
        <div class="form-group has-feedback">
          <input type="text" class="form-control" placeholder="NIP" name="nip" value="<%= typeof nip !== 'undefined' ? nip : '' %>">
          <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <input type="password" class="form-control" placeholder="Password" name="password" value="<%= typeof password !== 'undefined' ? password : '' %>">
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
          </div>
        </div>
      </form>
  
    </div>
  </div>
</body>